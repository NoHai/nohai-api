{
  "name": "nohai-api",
  "version": "1.0.0",
  "description": "The backend part of the NoHai application.",
  "main": "./dist/src/index.js",
  "scripts": {
    "mock": "./node_modules/.bin/cross-env environment=mock node ./dist/index.js",
    "mock:watch": "./node_modules/.bin/cross-env environment=mock&& nodemon ./dist/index.js",
    "dev": "./node_modules/.bin/cross-env environment=development&& node ./dist/index.js",
    "dev:watch": "./node_modules/.bin/cross-env environment=development&& nodemon ./dist/index.js",
    "staging": "./node_modules/.bin/cross-env environment=staging&& node ./dist/index.js",
    "staging:watch": "./node_modules/.bin/cross-env environment=staging&& nodemon ./dist/index.js",
    "production": "./node_modules/.bin/cross-env environment=production&& node ./dist/index.js",
    "production:watch": "./node_modules/.bin/cross-env environment=production&& nodemon ./dist/index.js",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --fix --force --project tsconfig.json --config tslint.json",
    "lint:watch": "onchange -v \"src/**/*.*\" -- tslint --force --project tsconfig.json \"{{changed}}\"",
    "build:mock": "npm run copy:settings:mock&& npm run copy:graph&& tsc",
    "build:mock:watch": "npm run copy:settings:mock&& tsc --watch",
    "build:dev": "npm run copy:settings:dev&& tsc",
    "build:dev:watch": "npm run copy:settings:dev&& tsc --watch",
    "build:staging": "npm run copy:settings:stagign&& tsc",
    "build:production": "npm run copy:settings:production&& tsc",
    "test": "jest --coverage",
    "test-watch": "jest --watchAll",
    "copy:settings:mock": "copyfiles -f src/presentation/settings/mock.json dist/presentation/settings",
    "copy:settings:dev": "copyfiles -f src/presentation/settings/development.json dist/presentation/settings",
    "copy:settings:staging": "copyfiles -f src/presentation/settings/staging.json dist/presentation/settings",
    "copy:settings:production": "copyfiles -f src/presentation/settings/production.json dist/presentation/settings",
    "copy:graph": "copyfiles -f src/presentation/graph/*.gql dist/presentation/graph&& copyfiles -f src/presentation/graph/results/*.gql dist/presentation/graph/results&& copyfiles -f src/presentation/graph/parameters/*.gql dist/presentation/graph/parameters&& copyfiles -f src/presentation/graph/inputs/*.gql dist/presentation/graph/inputs"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoHai/nohai-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoHai/nohai-api/issues"
  },
  "homepage": "https://github.com/NoHai/nohai-api#readme",
  "dependencies": {
    "awilix": "^4.2.0",
    "express": "^4.16.4",
    "express-graphql": "^0.7.1",
    "graphql": "^14.1.1",
    "mongodb": "^3.1.13",
    "npm": "^6.9.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.3.3",
    "typeorm": "^0.2.14"
  },
  "devDependencies": {
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.6.2",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.0.7",
    "@types/jest": "^24.0.9",
    "@types/mongodb": "^3.1.19",
    "@types/node": "^11.11.3",
    "@types/sinon": "^7.0.9",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "jest": "^24.1.0",
    "nodemon": "^1.18.9",
    "onchange": "^5.2.0",
    "sinon": "^7.2.7",
    "ts-jest": "^24.0.0",
    "tslint": "^5.12.1",
    "typescript": "^3.2.4"
  }
}
