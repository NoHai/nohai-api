{
  "name": "nohai-api",
  "version": "1.0.0",
  "description": "The backend part of the NoHai application.",
  "main": "./dist/src/index.js",
  "scripts": {
    "mock:build": "npm run mock:copy:settings&& npm run remove:migrations&& npm run remove:graph&& npm run copy:graph&& tsc",
    "mock:build:watch": "npm run mock:copy:settings&& tsc --watch",
    "mock": "./node_modules/.bin/cross-env environment=mock node ./dist/index.js",
    "mock:watch": "./node_modules/.bin/cross-env environment=mock nodemon ./dist/index.js",
    "mock:all": "npm run lint:fix&& npm run mock:build&& npm run mock",
    "mock:copy:settings": "copyfiles -f src/.env.mock dist",
    "dev:build": "npm run dev:copy:settings&& npm run remove:migrations&& npm run remove:graph&& npm run copy:graph&& tsc",
    "dev:build:watch": "npm run dev:copy:settings&& tsc --watch",
    "dev": "./node_modules/.bin/cross-env environment=development node ./dist/index.js",
    "dev:watch": "./node_modules/.bin/cross-env environment=development nodemon ./dist/index.js",
    "dev:all": "npm run lint:fix&& npm run dev:build&& npm run dev",
    "dev:copy:settings": "copyfiles -f src/.env.development dist",
    "staging:build": "npm run staging:copy:settings&& npm run remove:migrations&& npm run remove:graph&& npm run copy:graph&& tsc",
    "staging": "./node_modules/.bin/cross-env environment=staging node ./dist/index.js",
    "staging:watch": "./node_modules/.bin/cross-env environment=staging nodemon ./dist/index.js",
    "staging:all": "npm run lint:fix&& npm run staging:build&& npm run staging",
    "staging:copy:settings": "copyfiles -f src/.env.staging dist",
    "production:build": "npm run production:copy:settings&& npm run remove:migrations&& npm run remove:graph&& npm run copy:graph&& tsc",
    "production": "./node_modules/.bin/cross-env environment=production node ./dist/index.js",
    "production:watch": "./node_modules/.bin/cross-env environment=production nodemon ./dist/index.js",
    "production:all": "npm run lint:fix&& npm run production:build&& npm run production",
    "production:copy:settings": "copyfiles -f src/.env.production dist",
    "lint": "tslint --project tsconfig.json --config tslint.json",
    "lint:fix": "tslint --fix --force --project tsconfig.json --config tslint.json",
    "lint:watch": "onchange -v \"src/**/*.*\" -- tslint --force --project tsconfig.json \"{{changed}}\"",
    "test": "jest --coverage --maxWorkers 4",
    "test:watch": "jest --watchAll",
    "itest": "yarn test:cucumber&& yarn test:cucumber:report",
    "test:cucumber": "./node_modules/.bin/cucumber-js features/**/*.feature --require 'features/steps/**/*.ts' --require 'features/hooks/**/*.ts'  --require-module ts-node/register --format-options '{\"snippetInterface\": \"async-await\"}' --format json:coverage/cucumber-report.json --format summary",
    "test:cucumber:report": "node features/coverage/html-reporter.js",
    "copy:graph": "copyfiles -f src/presentation/graph/*.graphql dist/presentation/graph&& copyfiles -f src/presentation/graph/results/*.graphql dist/presentation/graph/results&& copyfiles -f src/presentation/graph/parameters/*.graphql dist/presentation/graph/parameters&& copyfiles -f src/presentation/graph/inputs/*.graphql dist/presentation/graph/inputs",
    "remove:graph": "rimraf dist/presentation/graph",
    "remove:migrations": "rimraf dist/data/migrations",
    "seed": "ts-node ./node_modules/typeorm-seeding/dist/cli.js seed",
    "now-build": "./node_modules/.bin/cross-env environment=production npm run production:build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/NoHai/nohai-api.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/NoHai/nohai-api/issues"
  },
  "homepage": "https://github.com/NoHai/nohai-api#readme",
  "dependencies": {
    "@sendgrid/mail": "^6.4.0",
    "@types/mjml": "^4.0.2",
    "awilix": "^4.2.2",
    "bcryptjs": "^2.4.3",
    "cors": "^2.8.5",
    "dotenv": "^8.0.0",
    "express": "^4.16.4",
    "express-graphql": "^0.8.0",
    "firebase-admin": "^8.3.0",
    "graphql": "^14.4.2",
    "jsonwebtoken": "^8.5.1",
    "mjml": "^4.5.0",
    "moment": "^2.24.0",
    "mongodb": "^3.2.3",
    "mysql": "^2.17.1",
    "npm": "^6.9.0",
    "reflect-metadata": "^0.1.13",
    "rxjs": "^6.5.1",
    "typeorm": "^0.2.19",
    "typeorm-seeding": "^1.0.0-rc.3",
    "uuid": "^3.3.2",
    "yarn": "^1.17.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.0",
    "@types/bcryptjs": "^2.4.2",
    "@types/cors": "^2.8.5",
    "@types/cucumber": "^4.0.7",
    "@types/dotenv": "^6.1.1",
    "@types/express": "^4.16.1",
    "@types/express-graphql": "^0.8.0",
    "@types/faker": "^4.1.5",
    "@types/glob": "^7.1.1",
    "@types/graphql": "^14.2.0",
    "@types/jest": "^24.0.15",
    "@types/jsonwebtoken": "^8.3.2",
    "@types/mongodb": "^3.1.28",
    "@types/mysql": "^2.15.6",
    "@types/node": "^14.0.11",
    "@types/sinon": "^7.0.11",
    "@types/uuid": "^3.4.5",
    "axios": "^0.19.0",
    "copyfiles": "^2.1.0",
    "cross-env": "^5.2.0",
    "cucumber": "^5.1.0",
    "cucumber-html-reporter": "^5.0.0",
    "jest": "^24.8.0",
    "nodemon": "^1.19.1",
    "onchange": "^5.2.0",
    "rimraf": "^2.6.3",
    "sinon": "^7.3.2",
    "ts-jest": "^24.0.2",
    "ts-node": "^8.3.0",
    "tslint": "^5.16.0",
    "typescript": "^3.4.5"
  }
}
